    <script>
        const tipoInvestimento = (prompt("Digite o tipo de investimento: "))
        var valorInvestimento = Number(prompt("Digite o valor de investimento: "))
        var valorTotal = 0
        if (tipoInvestimento === 'Poupanca') {
            valorInvestimento += valorInvestimento * 0.05
        } else {
            valorInvestimento += valorInvestimento * 0.10
        }
        alert(`Tipo de investimento: ${tipoInvestimento}\n
        Total do investimento R$: ${valorInvestimento.toFixed(2)}` )
    </script>
